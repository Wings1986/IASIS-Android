<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/backLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#de4e4e"
        android:orientation="vertical">

        <com.iasishealthcare.iasis.customcontrol.CustomFontTextView
            android:id="@+id/tvWaitTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:text="Current ER Wait Time: Not Available"
            android:textColor="@color/White"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <com.iasishealthcare.iasis.customcontrol.CustomFontButton
                android:id="@+id/btnCheckIn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_gravity="center"
                android:background="@drawable/button_round_bg"
                android:text="Check-In"
                android:layout_marginRight="30dp"
                android:textColor="@color/White"/>

            <com.iasishealthcare.iasis.customcontrol.CustomFontButton
                android:id="@+id/btnDirection"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_gravity="center"
                android:background="@drawable/button_round_bg"
                android:text="Directions"
                android:textColor="@color/White"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>